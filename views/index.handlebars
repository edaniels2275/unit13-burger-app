{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}
<div class="container">

<!-- jumbotron -->
    <div class="jumbotron">
        <h1 id="color">Eat the Burger!</h1>
        <br>
        <h2 id="color">Make a Burger</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger" id="color">New Burger:</label>
                    <input type="text" id="newburger" name="burger">
                    {{!-- Creates a button that will submit the user input into the database. --}}
                    <button type="submit" class="btn btn-success" id="addburger"><span class="fa fa-thumbs-up"></span>Make Burger</button>
                </div>
            </form>
        </panel>
    </div>

    <div class="row">
        <!-- Undevoured Burgers -->
        <div class="col-sm-12">
            <div class="panel panel-default">
            <div class="panel-heading"><strong>New Burgers</strong></div>
                <div class="panel-body">
                <ul>
                    {{#each burgers}}
                        {{#unless devoured}}
                            <span><strong> {{this.id}} : {{this.burger_name}} </strong></span>
                            <button type="button" class="devour-burger btn btn-warning" id ="eatbutton" 
                            data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-cutlery">
                            </span>Devour</button>
                            <hr>
                        {{/unless}}
                    {{/each}}
                </ul>
                </div>
        </div>
        </div>
    </div><!-- /row -->
        
    <div class="row">
        <!-- Devoured Burgers -->
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading"><strong>Devoured Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                <span><strong> {{this.id}} : {{this.burger_name}} </strong></span>
                                <button type="button" class="delete-burger btn btn-danger" id ="trashbutton" 
                                data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-trash">
                                </span>Trash</button>
                                <hr>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div><!-- /row -->

</div><!-- /container -->